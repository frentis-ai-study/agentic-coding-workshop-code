# MCP Chat Client Dockerfile
FROM python:3.12-slim

WORKDIR /app

# uv 설치
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# 의존성 파일 복사
COPY pyproject.toml ./
COPY README.md ./

# 의존성 설치 (part4-testing 그룹 포함)
RUN uv pip install --system -e ".[part4-testing]"

# 앱 파일 복사 (루트 기준 경로)
COPY 04-testing-deployment/02-mcp-chat-client/app.py ./
COPY 04-testing-deployment/02-mcp-chat-client/backend/ ./backend/
COPY 04-testing-deployment/02-mcp-chat-client/pages/ ./pages/
COPY 04-testing-deployment/02-mcp-chat-client/components/ ./components/
COPY 04-testing-deployment/02-mcp-chat-client/.streamlit/ ./.streamlit/
COPY 04-testing-deployment/02-mcp-chat-client/mcp_servers/ ./mcp_servers/

# MCP 서버 코드 복사 (Part 3)
COPY 03-mcp-tools/ ./03-mcp-tools/

# Streamlit 포트 노출
EXPOSE 8501

# 헬스체크 (Streamlit 내장 엔드포인트 사용)
HEALTHCHECK CMD curl --fail http://localhost:8501/_stcore/health || exit 1

# Streamlit 실행
CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]
